@model IEnumerable<ApiHotelSearchViewModel.Result>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
    double score;
}

<!-- Bootstrap Font Icon CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>

    h2 {
        text-align: center;
    }

    .styledTable {
        position: center;
    }

    table {
        width: 100%;
        border: 0.5px solid;
        border-collapse: collapse;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    th {
        padding: 15px;
        background-color: rgba(255,255,255,0.2);
        color: #fff;
        text-align: center;
    }

    td {
        border: 1px solid;
        padding: 15px;
        background-color: rgba(255,255,255,0.2);
        color: #000;
        text-align: center;
    }

    thead th {
        background-color: #5453A6;
    }

    tbody tr :hover {
        background-color: rgba(255,255,255,0.2);
    }

    tbody td {
        position: relative;
    }

</style>

<h2> OTEL REZERVASYON SAYFASI </h2>
<br />

<h3> Arama Yapılan Şehir : Paris / Fransa</h3>

<div class="styledTable">
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>ADI</th>
                <th>PUANI</th>
                <th>DEĞERLENDİRMESİ</th>
                <th>DETAYLAR</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@x.hotel_name</td>
                    @{
                        score = double.Parse(x.review_score.ToString()) / 10;
                    }
                    <td>@score</td>
                    @{
                        if (x.review_score_word == "Very good")
                        {
                            <td>Çok İyi</td>
                        }
                        if (x.review_score_word == "Good")
                        {
                            <td>İyi</td>
                        }
                        if (x.review_score_word == "Pleasant")
                        {
                            <td>Güzel</td>
                        }
                        if (x.review_score_word == "Fabulous")
                        {
                            <td>Harika</td>
                        }
                    }
                    <td><a href="#" class="btn btn-info" title="Detaylar" target="_blank"><i class="bi bi-box-arrow-up-right"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
    <br />
</div>

