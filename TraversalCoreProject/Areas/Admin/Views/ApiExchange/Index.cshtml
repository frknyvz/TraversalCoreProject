@model IEnumerable<ApiExchangeViewModel2.Exchange_Rates>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<!-- Bootstrap Font Icon CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>

    h2 {
        text-align: center;
    }

    .styledTable {
        position: center;
    }

    table {
        width: 100%;
        border: 0.5px solid;
        border-collapse: collapse;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    th {
        padding: 15px;
        background-color: rgba(255,255,255,0.2);
        color: #fff;
        text-align: center;
    }

    td {
        border: 1px solid;
        padding: 15px;
        background-color: rgba(255,255,255,0.2);
        color: #000;
        text-align: center;
    }

    thead th {
        background-color: #5453A6;
    }

    tbody tr :hover {
        background-color: rgba(255,255,255,0.2);
    }

    tbody td {
        position: relative;
    }

</style>

<h2> TÜRK LİRASI KUR BİLGİLERİ (TRY) </h2>
<br />

<div class="styledTable">
    <table>
        <thead>
            <tr>
                <th>ADI</th>
                <th>DEĞER</th>
                <th>ORANI (1 / DEĞER)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.currency</td>
                    @{
                        double value = 1 / Convert.ToDouble(x.exchange_rate_buy.ToString());
                        value = Math.Round(value, 2);
                    }
                    <td>@value ₺</td>
                    @{
                        double rate = Convert.ToDouble(x.exchange_rate_buy.ToString());
                        rate = Math.Round(rate, 5);
                    }
                    <td>@rate</td>
                    @*<td><a href="@x.trailer.ToString()" class="btn btn-info" title="Fragmana Git" target="_blank"><i class="bi bi-box-arrow-up-right"></i></a></td>*@
                </tr>
            }
        </tbody>
    </table>
    <br />
</div>

