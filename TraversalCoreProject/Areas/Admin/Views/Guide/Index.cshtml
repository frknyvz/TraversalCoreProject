@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<!-- Bootstrap Font Icon CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />


<style>

    .guideImg {
        background: transparent;
        padding: 5px;
        border: 1px solid #5453A6;
        border-radius: 50%;
        margin: auto;
        display: block;
        height: 90px;
        width: 90px;
    }

    h2 {
        text-align: center;
    }

    .styledTable {
        position: center;
    }

    table {
        width: 100%;
        border: 0.5px solid;
        border-collapse: collapse;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    th {
        padding: 15px;
        background-color: rgba(255,255,255,0.2);
        color: #fff;
        text-align: center;
    }

    td {
        border: 1px solid;
        padding: 15px;
        background-color: rgba(255,255,255,0.2);
        color: #000;
        text-align: center;
    }

    thead th {
        background-color: #5453A6;
    }

    tbody tr :hover {
        background-color: rgba(255,255,255,0.2);
    }

    tbody td {
        position: relative;
    }
</style>

<h2>REHBERLER</h2>
<br />


<div class="styledTable">
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>GÖRSEL</th>
                <th>AD SOYAD</th>
                <th>YAŞ</th>
                <th>DENEYİM</th>
                <th>EĞİTİM</th>
                <th>DİLLER</th>
                <th>ROTA</th>
                <th>DURUM</th>
                <th>DÜZENLE</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                count = count + 1;
                <tr>
                    <td>@count</td>
                    <td><img src="@x.Image" class="guideImg" /></td>
                    <td>@x.Name</td>
                    <td>@x.Age</td>
                    <td>@x.Experience</td>
                    <td>@x.Graduate</td>
                    <td>@x.Languages</td>
                    <td>@x.Route</td>

                    @{
                        if (x.Status == true)
                        {
                            <td><a href="/Admin/Guide/ChangeToFalse/@x.GuideID" class="btn btn-outline-danger"><i class="bi bi-dash-circle"></i> Pasif Yap</a></td>
                        }
                        else
                        {
                            <td><a href="/Admin/Guide/ChangeToTrue/@x.GuideID" class="btn btn-outline-success"><i class="bi bi-check-circle"></i> Aktif Yap</a></td>
                        }
                    }
                    <td><a href="/Admin/Guide/EditGuide/@x.GuideID" class="btn btn-outline-warning" title="Düzenle"><i class="bi bi-vector-pen"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a href="/Admin/Guide/AddGuide/" class="btn btn-outline-primary" title="Yeni Rehber Ekle"><i class="bi bi-person-add"></i></a>
</div>



