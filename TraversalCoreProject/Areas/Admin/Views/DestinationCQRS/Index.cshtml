@model List<GetAllDestinationQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<!-- Bootstrap Font Icon CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>

    h2 {
        text-align: center;
    }

    .styledTable {
        position: center;
    }

    table {
        width: 100%;
        border: 0.5px solid;
        border-collapse: collapse;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    th {
        padding: 15px;
        background-color: rgba(255,255,255,0.2);
        color: #fff;
        text-align: center;
    }

    td {
        border: 1px solid;
        padding: 15px;
        background-color: rgba(255,255,255,0.2);
        color: #000;
        text-align: center;
    }

    thead th {
        background-color: #5453A6;
    }

    tbody tr :hover {
        background-color: rgba(255,255,255,0.2);
    }

    tbody td {
        position: relative;
    }

</style>

<h2> ŞEHİRLER VE ROTALAR (CQRS) </h2>
<br />

<div class="styledTable">
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>ŞEHİR</th>
                <th>FİYAT</th>
                <th>KAPASİTE</th>
                <th>GÜN - GECE</th>
                <th>SİL</th>
                <th>GÜNCELLE</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@x.city</td>
                    <td>@x.price ₺</td>
                    <td>@x.capacity Kişi</td>
                    <td>@x.daynight</td>
                    <td><a href="/Admin/DestinationCQRS/DeleteDestination/@x.id/" class="btn btn-danger" title="Sil"><i class="bi bi-trash"></i></a></td>
                    <td><a href="/Admin/DestinationCQRS/GetDestination/@x.id/" class="btn btn-warning" title="Güncelle"><i class="bi bi-vector-pen"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a href="/Admin/DestinationCQRS/AddDestination/" class="btn btn-outline-primary" title="Yeni Rota Ekle"><i class="bi bi-plus-circle-fill"></i></a>
</div>




