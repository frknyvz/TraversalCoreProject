@model EntityLayer.Concrete.Destination
@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<!-- Bootstrap Font Icon CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />

<style>

    h2 {
        text-align: center;
    }

    #backButton {
    }

    #saveButton {
        position: absolute;
        right: 135px;
    }

    .form__input {
        width: 100%;
        height: 35px;
        border: 0.5px solid;
        border-radius: 2px;
        margin: 0.625rem auto;
        transition: all 250ms;
    }

        .form__input:focus {
            outline: none;
            border-top-color: rgba(0,0,0,0.1);
        }

            .form__input:focus + .form__label, .form__input:not(:placeholder-shown) + .form__label {
                transform: translateY(-4.5rem) scale(1);
                color: gray;
            }

        .form__input::placeholder {
            display: none;
            text-align: center;
            color: transparent;
            -webkit-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        .form__input:not(:placeholder-shown) {
            border-top-color: rgba(0, 0, 0, 0.5);
        }

    .form__label {
        font-size: 1rem;
        color: gray;
        display: block;
        transform: translate(1.25rem,-2.5rem);
        transform-origin: 0 0;
        transition: all 500ms;
        -webkit-user-select: none;
        -ms-user-select: none;
        user-select: none;
        pointer-events: none;
    }
</style>


<body>

    <h2>YENİ ŞEHİR - ROTA OLUŞTUR</h2>

    <div class="container">
        <form action="" class="form" method="post">

            <a href="/Admin/Destination/Index" class="btn btn-outline-danger" title="Geri" id="backButton"><i class="bi bi-backspace"></i>  Geri</a>
            <button id="saveButton" class="btn btn-outline-success" title="Oluştur"><i class="bi bi-save"></i>  Oluştur</button>
            <br /><br />

            <input type="text" placeholder="Name" class="form__input" asp-for="City" />
            <label for="name" class="form__label">Şehir</label>

            <input type="text" placeholder="Name" class="form__input" asp-for="DayNight" />
            <label for="name" class="form__label">Gün - Gece</label>

            <input type="number" placeholder="Name" class="form__input" asp-for="Price" />
            <label for="name" class="form__label">Fiyat</label>

            <input type="text" placeholder="Name" class="form__input" asp-for="Image" />
            <label for="name" class="form__label">Ana Görsel (URL)</label>

            <input type="text" placeholder="Name" class="form__input" asp-for="Description" />
            <label for="name" class="form__label">Açıklama</label>

            <input type="number" placeholder="Name" class="form__input" asp-for="Capacity" />
            <label for="name" class="form__label">Kapasite</label>

            <input type="text" placeholder="Name" class="form__input" asp-for="CoverImage" />
            <label for="name" class="form__label">Kapak Görseli (URL)</label>

            <input type="text" placeholder="Name" class="form__input" asp-for="Details1" />
            <label for="name" class="form__label">Detay 1</label>

            <input type="text" placeholder="Name" class="form__input" asp-for="Details2" />
            <label for="name" class="form__label">Detay 2</label>

            <input type="text" placeholder="Name" class="form__input" asp-for="Image2" />
            <label for="name" class="form__label">Görsel 2</label>

            <input type="number" placeholder="Name" class="form__input" asp-for="GuideID" />
            <label for="name" class="form__label">Rehber ID</label>

        </form>
    </div>
</body>
