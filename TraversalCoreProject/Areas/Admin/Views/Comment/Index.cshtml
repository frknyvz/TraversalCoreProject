@using EntityLayer.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Bootstrap Font Icon CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />

<style>

    h2 {
        text-align: center;
    }

    .styledTable {
        position: center;
    }

    table {
        width: 100%;
        border: 0.5px solid;
        border-collapse: collapse;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    th {
        padding: 15px;
        background-color: rgba(255,255,255,0.2);
        color: #fff;
        text-align: center;
    }

    td {
        border: 1px solid;
        padding: 15px;
        background-color: rgba(255,255,255,0.2);
        color: #000;
        text-align: center;
    }

    thead th {
        background-color: #5453A6;
    }

    tbody tr :hover {
        background-color: rgba(255,255,255,0.2);
    }

    tbody td {
        position: relative;
    }

</style>


<h2>YORUMLAR</h2>
<br />

<div class="styledTable">
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>KULLANICI</th>
                <th>ROTA</th>
                <th>İÇERİK</th>
                <th>TARİH</th>
                <th>SİL</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.CommentID</td>
                    <td>@x.CommentUser</td>
                    <td>@x.Destination.City</td>
                    <td>@x.CommentContent</td>
                    <td>@(((DateTime)x.CommentDate).ToString("dd MMM yyyy"))</td>
                    <td><a href="/Admin/Comment/DeleteComment/@x.CommentID" class="btn btn-outline-danger" title="Sil"><i class="bi bi-trash"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>


