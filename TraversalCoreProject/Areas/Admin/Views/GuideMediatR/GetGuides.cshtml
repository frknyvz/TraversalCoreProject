@model GetGuideByIDQueryResult
@{
    ViewData["Title"] = "GetGuides";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Bootstrap Font Icon CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />

<style>

    h2 {
        text-align: center;
    }

    #backButton {
    }

    #updateButton {
        position: absolute;
        right: 110px
    }

</style>


<h2>REHBER GÜNCELLE MEDİATR</h2>


<form method="post">
    @Html.HiddenFor(x=>x.GuideID)

    <button class="btn btn-outline-success" id="updateButton"><i class="bi bi-save"></i> Rehber Güncelle</button>
    <a href="/Admin/GuideMediatR/Index" class="btn btn-outline-danger" id="backButton"><i class="bi bi-backspace"></i> Geri</a>
    <br /><br />

    <div class="form-group">
        @Html.Label("Rehber Adı:")
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    &nbsp;
    <div class="form-group">
        @Html.Label("Açıklama:")
        <input type="text" asp-for="Description" class="form-control" />
    </div>
</form>
