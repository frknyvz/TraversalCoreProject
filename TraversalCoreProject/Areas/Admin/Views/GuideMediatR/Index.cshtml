@model List<GetAllGuideQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<!-- Bootstrap Font Icon CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>

    .guideImg {
        background: transparent;
        padding: 5px;
        border: 1px solid #5453A6;
        border-radius: 50%;
        margin: auto;
        display: block;
        height: 90px;
        width: 90px;
    }

    h2 {
        text-align: center;
    }

    .styledTable {
        position: center;
    }

    table {
        width: 100%;
        border: 0.5px solid;
        border-collapse: collapse;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    th {
        padding: 15px;
        background-color: rgba(255,255,255,0.2);
        color: #fff;
        text-align: center;
    }

    td {
        border: 1px solid;
        padding: 15px;
        background-color: rgba(255,255,255,0.2);
        color: #000;
        text-align: center;
    }

    thead th {
        background-color: #5453A6;
    }

    tbody tr :hover {
        background-color: rgba(255,255,255,0.2);
    }

    tbody td {
        position: relative;
    }
</style>

<h2>REHBERLER (MEDİATR)</h2>
<br />


<div class="styledTable">
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>GÖRSEL</th>
                <th>AD SOYAD</th>
                <th>AÇIKLAMA</th>
                <th>DÜZENLE</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                count = count + 1;
                <tr>
                    <td>@count</td>
                    <td><img src="@x.Image" class="guideImg" /></td>
                    <td>@x.Name</td>
                    <td>@x.Description</td>
                    <td><a href="/Admin/GuideMediatR/GetGuides/@x.GuideID/" class="btn btn-outline-warning" title="Düzenle"><i class="bi bi-vector-pen"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a href="/Admin/GuideMediatR/AddGuide/" class="btn btn-outline-primary" title="Yeni Rehber Ekle"><i class="bi bi-person-add"></i></a>
</div>