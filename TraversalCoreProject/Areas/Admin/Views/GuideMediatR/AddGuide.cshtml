@model CreateGuideCommand
@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Bootstrap Font Icon CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />

<style>

    h2 {
        text-align: center;
    }

    #backButton {
    }

    #saveButton {
        position: absolute;
        right: 135px;
    }

    .form__input {
        width: 100%;
        height: 35px;
        border: 0.5px solid;
        border-radius: 2px;
        margin: 0.625rem auto;
        transition: all 250ms;
    }

        .form__input:focus {
            outline: none;
            border-top-color: rgba(0,0,0,0.1);
        }

            .form__input:focus + .form__label, .form__input:not(:placeholder-shown) + .form__label {
                transform: translateY(-4.5rem) scale(1);
                color: gray;
            }

        .form__input::placeholder {
            display: none;
            text-align: center;
            color: transparent;
            -webkit-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        .form__input:not(:placeholder-shown) {
            border-top-color: rgba(0, 0, 0, 0.5);
        }

    .form__label {
        font-size: 1rem;
        color: gray;
        display: block;
        transform: translate(1.25rem,-2.5rem);
        transform-origin: 0 0;
        transition: all 500ms;
        -webkit-user-select: none;
        -ms-user-select: none;
        user-select: none;
        pointer-events: none;
    }
</style>

<body>
    <h2>YENİ REHBER EKLE</h2>
    <br />
    <div class="container">
        <form method="post" action="" class="form">
            <a href="/Admin/GuideMediatR/Index" class="btn btn-outline-danger" id="backButton"><i class="bi bi-backspace"></i>  Geri</a>
            <button class="btn btn-outline-success" id="saveButton"><i class="bi bi-save"></i>  Oluştur</button>
            <br /><br />

            <input type="text" placeholder="Name" class="form__input" asp-for="Name" />
            <label for="name" class="form__label">Ad Soyad</label>
            <span asp-validation-for="Name" class="text-danger"></span>

            <input type="text" placeholder="Name" class="form__input" asp-for="Description" />
            <label for="name" class="form__label">Açıklama</label>
            <span asp-validation-for="Description" class="text-danger"></span>

        </form>
    </div>
</body>

