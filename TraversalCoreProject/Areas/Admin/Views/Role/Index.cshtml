@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<!-- Bootstrap Font Icon CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>

    h2 {
        text-align: center;
    }

    .styledTable {
        position: center;
    }

    table {
        width: 100%;
        border: 0.5px solid;
        border-collapse: collapse;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    th {
        padding: 15px;
        background-color: rgba(255,255,255,0.2);
        color: #fff;
        text-align: center;
    }

    td {
        border: 1px solid;
        padding: 15px;
        background-color: rgba(255,255,255,0.2);
        color: #000;
        text-align: center;
    }

    thead th {
        background-color: #5453A6;
    }

    tbody tr :hover {
        background-color: rgba(255,255,255,0.2);
    }

    tbody td {
        position: relative;
    }

</style>

<h2> ROL LİSTESİ </h2>
<br />

@if(Model.Count > 0)
{
    <div class="styledTable">
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>ROL ADI</th>
                    <th>SİL</th>
                    <th>GÜNCELLE</th>
                    <th>DETAY</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@x.Name</td>
                        <td><a href="/Admin/Role/DeleteRole/@x.Id" class="btn btn-danger" title="Sil"><i class="bi bi-trash"></i></a></td>
                        <td><a href="/Admin/Role/UpdateRole/@x.Id" class="btn btn-warning" title="Güncelle"><i class="bi bi-vector-pen"></i></a></td>
                        <td><a href="#" class="btn btn-info" title="Git"><i class="bi bi-box-arrow-up-right"></i></a></td>
                    </tr>
                }


            </tbody>
        </table>
        <br>
        <a href="/Admin/Role/CreateRole/" class="btn btn-outline-primary" title="Yeni Rol Ekle"><i class="bi bi-plus-circle-fill"></i></a>
    </div>
}
else
{
    <div class="alert alert-danger">
        <span>Herhangi bir rol bulunamadı !!</span>
    </div>
    <a href="/Admin/Role/CreateRole/" class="btn btn-outline-primary" title="Yeni Rol Ekle"><i class="bi bi-plus-circle-fill"></i></a>

}

