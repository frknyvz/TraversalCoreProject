@model UpdateRoleViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Bootstrap Font Icon CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />

<style>

    h2 {
        text-align: center;
    }

    #backButton {
    }

    #updateButton {
        position: absolute;
        right: 110px
    }

</style>


<h2>ROL GÜNCELLE</h2>


<form method="post">
    @Html.HiddenFor(x=>x.RoleID)

    <button class="btn btn-outline-success" id="updateButton"><i class="bi bi-save"></i> Rol Güncelle</button>
    <a href="/Admin/Role/Index" class="btn btn-outline-danger" id="backButton"><i class="bi bi-backspace"></i> Geri</a>
    <br /><br />

    <div class="form-group">
        @Html.Label("Rol Adı:")
        <input type="text" asp-for="RoleName" class="form-control" />
    </div>
</form>