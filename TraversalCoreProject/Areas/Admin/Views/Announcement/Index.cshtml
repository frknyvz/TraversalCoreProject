@model List<DTOLayer.DTOs.AnnouncementDTOs.AnnouncementListDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- Bootstrap Font Icon CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />


<style>

    h2 {
        text-align: center;
    }

    .styledTable {
        position: center;
    }

    table {
        width: 100%;
        border: 0.5px solid;
        border-collapse: collapse;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    th {
        padding: 15px;
        background-color: rgba(255,255,255,0.2);
        color: #fff;
        text-align: center;
    }

    td {
        border: 1px solid;
        padding: 15px;
        background-color: rgba(255,255,255,0.2);
        color: #000;
        text-align: center;
    }

    thead th {
        background-color: #5453A6;
    }

    tbody tr :hover {
        background-color: rgba(255,255,255,0.2);
    }

    tbody td {
        position: relative;
    }

</style>

<h2>DUYURULAR</h2>
<br />

<body>
    <div class="styledTable">
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>BAŞLIK</th>
                    <th>İÇERİK</th>
                    <th>TARİH</th>
                    <th>SİL</th>
                    <th>GÜNCELLE</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.AnnouncementID</td>
                        <td>@x.Title</td>
                        <td>@x.Content</td>
                        <td>@(((DateTime)x.Date).ToString("dd MMM yyyy"))</td>
                        <td><a href="/Admin/Announcement/DeleteAnnouncement/@x.AnnouncementID" class="btn btn-danger" title="Sil"><i class="bi bi-trash"></i></a></td>
                        <td><a href="/Admin/Announcement/UpdateAnnouncement/@x.AnnouncementID" class="btn btn-warning" title="Güncelle"><i class="bi bi-vector-pen"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <br />
    <a href="/Admin/Announcement/AddAnnouncement/" class="btn btn-outline-primary" title="Yeni Duyuru Ekle"><i class="bi bi-plus-circle-fill"></i></a>
</body>


