@model List<VisitorViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Bootstrap Font Icon CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />

<style>

    h2 {
        text-align: center;
    }

    .styledTable {
        position: center;
    }

    table {
        width: 100%;
        border: 0.5px solid;
        border-collapse: collapse;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    th {
        padding: 15px;
        background-color: rgba(255,255,255,0.2);
        color: #fff;
        text-align: center;
    }

    td {
        border: 1px solid;
        padding: 15px;
        background-color: rgba(255,255,255,0.2);
        color: #000;
        text-align: center;
    }

    thead th {
        background-color: #5453A6;
    }

    tbody tr :hover {
        background-color: rgba(255,255,255,0.2);
    }

    tbody td {
        position: relative;
    }
</style>

<h2>ZİYARETÇİ LİSTESİ</h2>
<br />

<body>
    <div class="styledTable">
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>AD</th>
                    <th>SOYAD</th>
                    <th>ŞEHİR</th>
                    <th>ÜLKE</th>
                    <th>MAİL</th>
                    <th>SİL</th>
                    <th>GÜNCELLE</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.VisitorID</td>
                        <td>@x.Name</td>
                        <td>@x.Surname</td>
                        <td>@x.City</td>
                        <td>@x.Country</td>
                        <td>@x.Mail</td>
                        <td><a href="/Admin/VisitorApi/DeleteVisitor/@x.VisitorID" class="btn btn-danger" title="Sil"><i class="bi bi-trash"></i></a></td>
                        <td><a href="/Admin/VisitorApi/UpdateVisitor/@x.VisitorID" class="btn btn-warning" title="Güncelle"><i class="bi bi-vector-pen"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
        <a href="/Admin/VisitorApi/AddVisitor/" class="btn btn-outline-primary" title="Yeni Ziyaretçi Ekle"><i class="bi bi-plus-circle-fill"></i></a>
    </div>
</body>


