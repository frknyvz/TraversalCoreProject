@using EntityLayer.Concrete
@model List<Reservation>
@{
    ViewData["Title"] = "MyOldReservation";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
    int count = 0;
}

@if (Model.Count() == 0)
{
    <h2>Sonuç Bulunamadı..</h2>
}
else
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Geçmiş Rezervasyonlarım</h2>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                            <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                            <li><a data-action="close"><i class="ft-x"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-content collapse show">
                    <div class="card-body">
                        <p class="card-text">Sitemizi kullanarak yapmış olduğunuz geçmiş rezervasyonları aşağıda görüntüleyebilirsiniz.</p>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Lokasyon</th>
                                        <th>Kişi Sayısı</th>
                                        <th>Rezervasyon Tarihi</th>
                                        <th>Durum</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var x in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@x.Destination.City</td>
                                            <td>@x.PersonCount</td>
                                            <td>@(((DateTime)x.ReservationDate).ToString("dd MMMM yyyy"))</td>
                                            <td>@x.Status</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <p style="text-align:right">Soru, görüş ve önerileriniz için <span class="text-bold-600"><a href="/Contact/Index" target="_blank">tıklayınız...</a></span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

