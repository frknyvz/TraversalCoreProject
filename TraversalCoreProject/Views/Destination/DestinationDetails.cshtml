@model EntityLayer.Concrete.Destination
@{
    ViewData["Title"] = "DestinationDetails";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<!doctype html>
<html lang="tr">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Rota Detayları: @Model.City | Traversal</title>
    <!-- google fonts -->
    <link href="//fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link href="//fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,400;0,700;1,400&display=swap"
          rel="stylesheet">
    <!-- google fonts -->
    <!-- Template CSS -->
    <link rel="stylesheet" href="~/Traversal-Liberty/assets/css/style-liberty.css">
    <!-- Template CSS -->
    <style>
        #titleColor:hover {
            color: #FF1654;
        }
    </style>
</head>

<body>
    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container">
                <h2 class="title">@Model.City</h2>
                <ul class="breadcrumbs-custom-path mt-2">
                    <li><a href="/Default/Index/">Ana Sayfa</a></li>
                    <li><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Rota Detayları </li>
                    <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> @Model.City </li>
                </ul>
            </div>
        </div>
    </section>
    <div class="py-5 w3l-homeblock1 text-center">
        <div class="container mt-md-3">
            <h3 class="blog-desc-big text-center mb-4" id="titleColor">
                @Model.City Bölgesini Keşfedin
            </h3>
            <div class="blog-post-align">
                <div class="blog-post-img">
                    <a href="/Guide/Index/"><img src="@Model.Guide.Image" alt="" class="rounded-circle img-fluid" /></a>
                </div>
                <div class="blog-post-info">
                    <div class="author align-items-center mb-1">
                        <a href="/Guide/Index/">@Model.Guide.Name</a>
                        <br />
                        <b>@Model.Guide.Route</b>
                    </div>
                    <ul class="blog-meta">
                        <li class="meta-item blog-lesson">
                            <span class="meta-value"> @(((DateTime)Model.Date).ToString("dd MMM yyyy")) </span>
                        </li>
                        <li class="meta-item blog-students">
                            @{
                                string x = (DateTime.Now - (DateTime)Model.Date).ToString();
                                <span class="meta-value">
                                    @x.Split('.')[0] Gün Önce Oluşturuldu
                                </span>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <section class="blog-post-main w3l-homeblock1">
        <!--/blog-post-->
        <div class="blog-content-inf pb-5">
            <div class="container pb-lg-4">
                <div class="single-post-image">
                    <div class="post-content" style="text-align:center">
                        <img src="@Model.Image" class="radius-image img-fluid mb-5" alt="" @*style="width:800px;height:500px"*@ />
                    </div>
                </div>
                <div class="single-post-content">
                    <p class="alphabet mb-4">
                        <span class="big-letter">"</span>@Model.Details1
                    </p>
                    <div class="sing-post-thumb mb-5 row pt-3">
                        <div class="col-sm-6">
                            <a href="#url"><img src="@Model.CoverImage" class="img-fluid radius-image" alt="" style="width:500px;height:400px"></a>
                        </div>
                        <div class="col-sm-6 mt-sm-0 mt-3">
                            <a href="#url"><img src="@Model.Image2" class="img-fluid radius-image" alt="" style="width:500px;height:400px"></a>
                        </div>
                    </div>
                    <p class="mb-4">
                        @Model.Details2
                    </p>
                    <div class="text-right">
                        @if(Model.Status == true)
                        {
                            <a class="btn btn-style btn-primary" href="/Member/Reservation/NewReservation/" target="_blank"> Rezervasyon Yap </a>
                        }
                        else
                        {
                            <a class="btn btn-style btn-primary" title="Bu Rota Aktif Değildir" disabled> Rezervasyon Yap </a>
                        }

                    </div>
                    <div class="d-grid left-right mt-5 pb-md-5">
                        <div class="buttons-singles tags">
                            <h4 id="titleColor">Etiketler :</h4>
                            <a href="https://www.google.com/search?q=Seyahat" target="_blank">#Seyahat</a>
                            <a href="https://www.google.com/search?q=Kültür" target="_blank">#Kültür</a>
                            <a href="https://www.google.com/search?q=Otel" target="_blank">#Otel</a>
                            <a href="https://www.google.com/search?q=Rezervasyon" target="_blank">#Rezervasyon</a>
                        </div>
                        <div class="buttons-singles">
                            <h4 id="titleColor">Paylaş :</h4>
                            <a href="https://www.instagram.com" target="_blank"><span class="fa fa-instagram" aria-hidden="true"></span></a>
                            <a href="https://www.facebook.com" target="_blank"><span class="fa fa-facebook" aria-hidden="true"></span></a>
                            <a href="https://www.whatsapp.com" target="_blank"><span class="fa fa-whatsapp" aria-hidden="true"></span></a>
                        </div>
                    </div>
                    <h4>Bu Rotanın Rehberi</h4>
                    <div class="author-card mt-2">
                        <div class="row align-items-center">
                            <div class="col-sm-3 col-6">
                                <div>
                                    <img src="@Model.Guide.Image" alt="" class="rounded-circle img-fluid">
                                </div>
                            </div>
                            <div class="col-sm-9 mt-sm-0 mt-3">
                                <h3 class="mb-3 title">@Model.Guide.Name</h3>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>YAŞ</th>
                                            <th>TECRÜBE</th>
                                            <th>EĞİTİM</th>
                                            <th>DİLLER</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>@Model.Guide.Age</td>
                                            <td>@Model.Guide.Experience</td>
                                            <td>@Model.Guide.Graduate</td>
                                            <td>@Model.Guide.Languages</td>
                                        </tr>
                                    </tbody>
                                </table>
                                <ul class="author-icons mt-2">
                                    <li>
                                        <a class="linkedin" href="@Model.Guide.InstagramUrl">
                                            <span class="fa fa-instagram"
                                                  aria-hidden="true"></span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="twitter" href="@Model.Guide.TwitterUrl">
                                            <span class="fa fa-twitter"
                                                  aria-hidden="true"></span>
                                        </a>
                                    </li>
                                </ul>

                            </div>
                        </div>
                    </div>

                    @await Component.InvokeAsync("_CommentList", new { id=ViewBag.i })

                    @await Html.PartialAsync("~/Views/Comment/AddComment.cshtml", new { id=ViewBag.destID })

                </div>
            </div>
        </div>
    </section>
</body>
</html>
